                    <% if (isLoggedIn) { %>
                        <a class="nav-link" href="/categories">Categories</a>
                    <% } else { %>
                        <a href="/login" class="nav-link">Categories</a>
                    <% } %>
                </li>
                <li class="nav-item">
                    <% if (isLoggedIn) { %>
                        <a class="nav-link" href="/orders">Orders</a>
                    <% } else { %>
                        <a href="/login" class="nav-link">Orders</a>
                    <% } %>
                </li>
                <li class="nav-item">
                    <% if (isLoggedIn) { %>
                        <a class="nav-link" href="/reviews">Reviews</a>
                    <% } else { %>
                        <a href="/login" class="nav-link">Reviews</a>
                    <% } %>
                </li>
                <li class="nav-item">
                    <% if (isLoggedIn) { %>
                        <a class="nav-link" href="/aboutus">About us</a>
                    <% } else { %>
                        <a href="/login" class="nav-link">About us</a>
                    <% } %>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        More
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <% if (isLoggedIn) { %>
                            <a class="dropdown-item" href="/contact">Contact Us</a>
                        <% } else { %>
                            <a href="/login" class="nav-link">Contact Us</a>
                        <% } %>
                        <% if (isLoggedIn) { %>
                            <a class="dropdown-item" href="/help">Help</a>
                        <% } else { %>
                            <a href="/login" class="nav-link">Help</a>
                        <% } %>
                    </div>
                </li>
            </ul>

            <!-- New Section for Login/Logout and Orders -->
            <div class="ml-3 cart-section" >
                <% if (isLoggedIn) { %>
                    <a href="/cart" class="btn cart-btn">My Cart</a>
                    <form action="/logout" method="POST" class="d-inline">
                        <button type="submit" class="btn cart-btn">Logout</button>
                    </form>
                    <a href="/profile" class="user-icon-link">
                        <div class="user-icon-circle">
                            <i class="fas fa-user"></i>
                        </div>
                    </a>                    
                <% } else { %>
                    <a href="/login" class="btn cart-btn">Login</a>
                <% } %>
            </div>
        </div>
    </div>
</nav>

    <!-- Welcome Section -->
    <div class="welcome-section"
        style="background-image: url('images/bg.png'); background-size: cover; background-position: center center;height: 820px;">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1
                        style="font-size:90px;color: rgb(232,240,250);margin-right: 1000px;  display: inline-block; margin-top: 200px;">
                        HealWings</h1>
                    <p style="margin-bottom: 20px;margin-right:15px;color:rgb(232,240,250);display: inline-block;">
                        Ensuring the integrity of pharmaceuticals from manufacturer to consumer.</p>
                        <form action="/search" method="GET" class="form-inline">
                            <input type="text" name="q" class="form-control" placeholder="Search for products..." required>
                            <button type="submit" class="btn cart-btn ml-2" style="border-color: white;">Search</button>
                        </form>
                    <div class="hr-container" style="margin-top: 10px;">
                        <hr class="hr-line hr-small"
                            style="border: 0; border-top: 5px solid #C4FFFF; width: 20%; margin-left: 0;border-radius: 15%;">
                        <hr class="hr-line hr-medium"
                            style="border: 0; border-top: 5px solid #C4FFFF; width: 50%; margin-left: 0;border-radius: 15%;">
                        <hr class="hr-line hr-large"
                            style="border: 0; border-top: 5px solid #C4FFFF; width: 100%; margin-left: 0;border-radius: 15%;">
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Box Section -->
<div class="box-section container" id="fade-in-section">
    <h1 class="mt-4" style="color:black;font-size:36px;border:black;">Top Drugs</h1>
    <div class="row">
        <% topItems.forEach(item => { %>
            <div class="col-md-3">
                <div class="box">
                    <img src="data:image/jpeg;base64,<%= item.drug_image.toString('base64') %>" alt="<%= item.item_name %>">
                    <div class="overlay-text"><%= item.item_name %></div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

    <div class="container">
        <h1 class="mt-4" style="color:black;font-size:36px;">Testimonials</h1>
        <div id="testimonialCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% for (let i = 0; i < reviews.length; i++) { %>
                    <li data-target="#testimonialCarousel" data-slide-to="<%= i %>" class="<%= i === 0 ? 'active' : '' %>"></li>
                <% } %>
            </ol>
            <div class="carousel-inner">
                <% for (let i = 0; i < reviews.length; i += 2) { %>
                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                        <div class="row">
                            <% for (let j = 0; j < 2; j++) { 
                                if (i + j < reviews.length) { 
                                    const review = reviews[i + j]; %>
                                    <div class="col-sm-6">
                                        <div class="testimonial-box" style="height:200px;">
                                            <p><%= review.comment %></p>
                                            <p>
                                                <% for (let k = 0; k < review.rating; k++) { %>
                                                    &#9733; 
                                                <% } %>
                                                <% for (let k = review.rating; k < 5; k++) { %>
                                                    &#9734; 
                                                <% } %>
                                            </p>
                                            <cite><%= review.user_name %></cite>
                                        </div>
                                    </div>
                                <% } 
                            } %>
                        </div>
                    </div>
                <% } %>
            </div>
            <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2024 HealWings. All rights reserved.</p>
    </div>



    <!-- Add this script at the end of your body or in a separate JavaScript file -->
    <script>
        function handleIntersection(entries, observer) {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = "1";
                } else {
                    entry.target.style.opacity = "0";
                }
            });
        }

        // Create an Intersection Observer
        const options = {
            root: null,
            rootMargin: "0px",
            threshold: 0.5, // Adjust this threshold as needed
        };

        const observer = new IntersectionObserver(handleIntersection, options);

        // Target the element you want to fade in/out
        const fadeInSection = document.getElementById("fade-in-section");

        // Start observing when it comes into the viewport
        observer.observe(fadeInSection);
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>


</body>

</html>

