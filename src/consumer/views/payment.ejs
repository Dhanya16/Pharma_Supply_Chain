<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HealWings</title>
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            background-repeat: no-repeat;
    background-attachment: fixed;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 50px;
            max-width: 600px;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            border-radius: 8px;
        }

        h1 {
            font-size: 28px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 30px;
        }

        .description {
            font-size: 16px;
            margin-bottom: 20px;
            color: #666;
        }

        #rzp-button {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #rzp-button:hover {
            background-color: #0056b3;
        }

        .payment-summary {
            margin-bottom: 20px;
        }

        .payment-summary h2 {
            font-size: 22px;
            font-weight: bold;
        }

        .payment-summary .amount {
            font-size: 20px;
            color: #28a745;
        }

        .brand-logo img {
            max-width: 100px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <!-- Brand/Logo -->
        <div class="brand-logo">
            <img src="/images/logo.png" alt="Brand Logo">
        </div>

        <h1>Complete Your Payment</h1>

        <!-- Description -->
        <p class="description">
            Thank you for choosing Heal Wings. Please review the amount below and proceed to make your payment.
        </p>

        <!-- Payment Summary -->
        <div class="payment-summary">
            <h2>Order Summary</h2>
            <p>Order ID: <strong><%= orderId %></strong></p>
            <p class="amount">Amount to be Paid: â‚¹<%= Number(totalAmount).toFixed(2) %></p>
        </div>

        <!-- Payment Button -->
        <button id="rzp-button">Pay Now</button>
    </div>

    <script>
        var options = {
            "key": "<%= key %>", // Razorpay Key ID
            "amount": "<%= totalAmount * 100 %>", // Amount in paise
            "currency": "INR",
            "name": "Heal Wings",
            "description": "Test Transaction",
            "order_id": "<%= orderId %>", // Razorpay Order ID
            "handler": function (response) {
                // After payment, send the paymentId to your server for confirmation
                window.location.href = "/confirm-payment?paymentId=" + response.razorpay_payment_id+ "&orderId=" + "<%= new_var %>"+"&userId=" + "<%= userId %>";
            }
        };
        console.log("hi",options);

        var rzp1 = new Razorpay(options);

        document.getElementById('rzp-button').onclick = function(e) {
            rzp1.open();
            e.preventDefault();
        }
    </script>
</body>
</html>
